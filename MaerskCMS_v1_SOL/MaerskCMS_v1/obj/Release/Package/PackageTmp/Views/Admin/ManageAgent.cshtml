
@{
    ViewBag.Title = "ManageAgent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<MaerskCMS_v1.Models.AgentModel>

<h2>Manage Agent</h2>
<hr />
<h3>Approval Request</h3>

<table class="table table-striped table-hover " id="datatable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Password</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-mail Address</th>
            <th>Submitted On</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ID
                    </td>
                    <td>
                        @item.Username
                    </td>
                    <td>
                        *****
                    </td>
                    <td>
                        @item.FirstName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Registration
                    </td>
                    <td>
                        @Html.ActionLink("Approve", "AdminApproval", new { id = item.ID })
                        |
                        @Html.ActionLink("Delete", "AdminDeleteAgent", new { id = item.ID })
                    </td>
                </tr>
            }
        }

    </tbody>
</table> 
@if(Model == null)
{
    <h4>No record found. </h4>
}